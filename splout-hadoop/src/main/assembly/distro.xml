<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distro</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <files>
    <file>
      <source>
        target/${project.artifactId}-${project.version}-hadoop.jar
      </source>
      <outputDirectory>/</outputDirectory>
  </file>
  </files>  
  <fileSets>
  	<fileSet>
  		<directory>target/maven-shared-archive-resources</directory>
  		<outputDirectory>native</outputDirectory>  	
  	</fileSet>
	<fileSet>
  		<directory>examples</directory>
  		<outputDirectory>examples</outputDirectory>  	
  	</fileSet>
  	<fileSet>
  		<directory>src/main/scripts</directory>
  		<outputDirectory>bin</outputDirectory>
  	</fileSet>
  	<fileSet>
  		<directory>src/main/resources/pagecounts-sample</directory>
  		<outputDirectory>examples/pagecounts/pagecounts-sample</outputDirectory>
  	</fileSet>
  	<fileSet>
  		<directory>src/main/resources/pagecounts</directory>
  		<outputDirectory>examples/pagecounts</outputDirectory>
  	</fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <unpack>false</unpack>
      <scope>runtime</scope>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
